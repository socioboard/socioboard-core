<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping
      xmlns="urn:nhibernate-mapping-2.2"
      namespace="SocioBoard.Domain"
      assembly="SocioBoard">

  <class name="Blog_Comments" table="Blog_Comments" lazy="false">
    <id name="Id" column="Id">
      <generator class="guid"/>
    </id>
    <property name="CommentPostId">
      <column name="CommentPostId" />
    </property>
    <property name="CommentAuthor">
      <column name="CommentAuthor" />
    </property>
    <property name="CommentAuthorEmail">
      <column name="CommentAuthorEmail"  />
    </property>
    <property name="CommentAuthorUrl">
      <column name="CommentAuthorUrl"  />
    </property>
    <property name="CommentAuthorIp">
      <column name="CommentAuthorIp"  />
    </property>
    <property name="CommentDate">
      <column name="CommentDate"  />
    </property>
    <property name="CommentContent">
      <column name="CommentContent"  />
    </property>
    <property name="CommentApproved">
      <column name="CommentApproved"  />
    </property>

  </class>
</hibernate-mapping>
