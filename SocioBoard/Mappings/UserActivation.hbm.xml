<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping
      xmlns="urn:nhibernate-mapping-2.2"
      namespace="SocioBoard.Domain"
        assembly="SocioBoard">

  <class name="UserActivation" table="UserActivation" lazy="false">
    <id name="Id" column="Id">
      <generator class="guid"/>
    </id>
    <property name="UserId">
      <column name="UserId" />
    </property>
    <property name="ActivationStatus">
      <column name="ActivationStatus"/>
    </property>

  </class>
</hibernate-mapping>